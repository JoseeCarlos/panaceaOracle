        Title="Vnrecuperarpass" Height="575.41" Width="746.516">
    <Grid>
        <Grid Height="80" VerticalAlignment="Top" Background="White">
            <StackPanel Orientation="Horizontal">
                <Image Source="img/log2.png" Width="200" Height="80"  HorizontalAlignment="Left"/>
                <TextBlock Text="Restablecimiento de Password" Foreground="Black" FontSize="30" HorizontalAlignment="Center" VerticalAlignment="Center" FontFamily="Arial Black"/>
            </StackPanel>
        </Grid>
        <TextBox x:Name="txtuserl" FontSize="17" HorizontalAlignment="Left" Height="64" Margin="178,180,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="309"/>
