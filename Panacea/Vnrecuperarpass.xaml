        <Label Content="Ingrese Su Correo Electronico" FontSize="17" HorizontalAlignment="Left" Margin="183,287,0,0" VerticalAlignment="Top" Height="40" Width="310" FontFamily="Arial Black"/>
        <TextBox x:Name="txtcorreo" FontSize="17" HorizontalAlignment="Left" Height="51" Margin="174,341,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="318"/>
